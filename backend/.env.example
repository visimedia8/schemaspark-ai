# ==========================================
# SchemaSpark AI - Production Environment
# ==========================================

# Server Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=https://your-api-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Database - MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/schemaspark?retryWrites=true&w=majority
REDIS_URL=redis://your-redis-url:6379

# JWT Secrets (Generate strong random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too-minimum-32-chars

# API Keys (Required for core functionality)
DEEPSEEK_API_KEY=your-deepseek-api-key-here
SCRAPERAPI_KEY=your-scraperapi-key-here
FIRECRAWL_API_KEY=your-firecrawl-api-key-here
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email (Optional for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# External Services
GOOGLE_SEARCH_CONSOLE_API_URL=https://www.googleapis.com/webmasters/v3
SCRAPERAPI_BASE_URL=https://api.scraperapi.com
FIRECRAWL_BASE_URL=https://api.firecrawl.dev
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security (Production settings)
CORS_ORIGIN=https://your-frontend-domain.com
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring & Analytics (Optional)
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Performance & Caching
CACHE_ENABLED=true
CACHE_TTL=3600